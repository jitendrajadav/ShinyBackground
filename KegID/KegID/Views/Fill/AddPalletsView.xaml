<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.AddPalletsView"
             xmlns:local="clr-namespace:KegID"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator},Path=AddPallets}">
    
    <ContentPage.Content>
       
        <Grid>
            <Grid.RowSpacing>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="5" />
                    <On Platform="Android, WinPhone, Windows" Value="0" />
                </OnPlatform>
            </Grid.RowSpacing>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label
                x:Name="lblFillKegs"
                TextColor="{StaticResource selectTextColor}"
                Text="Fill Kegs"
                Style="{StaticResource LabelTitleStyle}"
                HorizontalOptions="Start">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.FillKegsCommand, 
                                                        Source={x:Reference Name=lblFillKegs}}"
                                                         CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label
                TextColor="Black"
                Style="{StaticResource LabelTitleStyle}"
                Text="Add pallets"
                HorizontalOptions="Center"/>
          
            <BoxView
                Grid.Row="1"
                Margin="0,0,0,10"
                BackgroundColor="{StaticResource lightGrayPlaceholderColor}"
                HeightRequest="1"
                VerticalOptions="End"
                HorizontalOptions="FillAndExpand"/>

            <Label
                Grid.Row="2"
                TextColor="Black"
                FontSize="Medium"
                Margin="10,0,10,30"
                VerticalOptions="Center"
                Text="{Binding AddPalletsTitle}"/>

            <BoxView
                Margin="-10,0,-10,0"
                Grid.Row="3"
                HeightRequest="40"
                BackgroundColor="{StaticResource bannerBGColor}"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"/>

            <StackLayout
                Grid.Row="3"
                Orientation="Horizontal"
                HorizontalOptions="Start"
                VerticalOptions="Center">
               
                <Label
                    TextColor="White"
                    Margin="10,0,0,0"
                    FontSize="{StaticResource AppBarButtonFontSize}"
                    VerticalTextAlignment="Center"
                    FontAttributes="Bold"
                    Text="{Binding PalletCollection.Count, StringFormat='Pallets: {0}'}"/>
                
                <Label
                    TextColor="#B7EB35"
                    FontAttributes="Bold"
                    FontSize="{StaticResource AppBarButtonFontSize}"
                    HorizontalOptions="Center"
                    VerticalTextAlignment="Center"
                    Text="{Binding Kegs}"/>

            </StackLayout>

            <Button
                Grid.Row="3"
                x:Name="imgAdd"
                BackgroundColor="Transparent"
                HorizontalOptions="End"   
                Text="+"
                TextColor="White"
                FontSize="50"
                BorderWidth="0"
                Margin="0,0,10,0"
                Command="{Binding FillScanCommand}"
                VerticalOptions="Center"/>

            <ListView
                x:Name="lstPallets"
                Grid.Row="4"
                VerticalOptions="FillAndExpand"
                SeparatorVisibility="Default"
                SeparatorColor="{StaticResource lightGrayPlaceholderColor}"
                HasUnevenRows="True"
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding PalletCollection}">

                <ListView.Behaviors>
                    <behaviors:EventToCommandBehavior
                        EventName="ItemTapped" 
                        Command="{Binding ItemTappedCommand}"
                        Converter="{StaticResource ItemTappedConverter}"/>
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                HeightRequest="50"
                                VerticalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90*"/>
                                    <ColumnDefinition Width="10*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label 
                                    VerticalOptions="Center"
                                    Grid.Column="0"
                                    Margin="10,0,0,0"
                                    FontSize="{StaticResource ListViewTitleFont}"
                                    TextColor="Black"
                                    Text="{Binding ManifestId}"/>
                                
                                <Label 
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    FontSize="{StaticResource ListViewTitleFont}"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding Count}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <Label
                x:Name="lblSubmit"
                HeightRequest="60"
                Margin="-15,0,-15,-5"
                TextColor="White"
                BackgroundColor="{StaticResource selectTextColor}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand"
                HorizontalTextAlignment="Center"
                Grid.Row="5"
                Text="Submit"
                VerticalTextAlignment="Center"
                FontSize="{StaticResource AppBarButtonFontSize}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SubmitCommand, 
                                                        Source={x:Reference Name=lblSubmit}}"
                                                         CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>

        </Grid>
    </ContentPage.Content>
</ContentPage>