<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.FillScanView"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             xmlns:local="clr-namespace:KegID"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator},Path=FillScan}">
    <ContentPage.Content>
        <Grid
            RowSpacing="0"
            ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>
            
            <Button
                Grid.ColumnSpan="2"
                Text="Cancel"
                BackgroundColor="Transparent"
                VerticalOptions="Center"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="Start"
                Command="{Binding CancelCommand}"/>

            <Button
                Grid.ColumnSpan="2"
                Text="Submit"
                IsVisible="{Binding IsPalletze,Converter={StaticResource InvertedBooleanConverter}}"
                BackgroundColor="Transparent"
                VerticalOptions="Center"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="End"
                Command="{Binding SubmitCommand}"/>

            <Label
                Grid.ColumnSpan="2"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Scan"
                FontSize="Large"
                TextColor="Black"/>
            
            <BoxView
                Grid.ColumnSpan="2"
                Margin="-10,0,-10,0"
                Grid.Row="1"
                HeightRequest="50"
                BackgroundColor="{StaticResource bannerBGColor}"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"/>
            
            <Label
                Margin="10,0,0,0"
                VerticalOptions="Center"
                FontSize="Medium"
                Text="{Binding ManifestId, StringFormat='Pallet# -{0}'}"
                IsVisible="{Binding IsPalletVisible}"
                HorizontalOptions="FillAndExpand"
                TextColor="White"
                Grid.Row="1"/>
            
            <Entry
                Margin="10,0,0,0"
                IsVisible="{Binding IsPalletVisible,Converter={StaticResource InvertedBooleanConverter}}"
                VerticalOptions="Center"
                Text="{Binding ManifestId,Mode=TwoWay}"
                HorizontalOptions="FillAndExpand"
                Grid.Row="1"/>

            <Image
                x:Name="imgPencil"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalOptions="End"    
                Margin="0,0,10,0"
                HeightRequest="30"
                VerticalOptions="Center"
                IsVisible="{Binding IsPalletze}"
                BackgroundColor="Transparent">
                <Image.Source>
                    <OnPlatform x:TypeArguments="FileImageSource">
                        <OnPlatform.iOS>
                            <FileImageSource File="pencil.png"/>
                        </OnPlatform.iOS>
                        <OnPlatform.Android>
                            <FileImageSource File="pencil.png"/>
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="Assets/pencil.png"/>
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.IsPalletVisibleCommand, 
                                                        Source={x:Reference Name=imgPencil}}"
                                                         CommandParameter="{Binding}"/>
                </Image.GestureRecognizers>
            </Image>

            <Entry
                Margin="0,5,0,0"
                Grid.Row="2"
                Text="{Binding ManaulBarcode}"
                Placeholder="Barcode">
                <Entry.Behaviors>
                    <behaviors:EventToCommandBehavior
                        EventName="Completed"
                      Command="{Binding BarcodeManualCommand}"/>
                </Entry.Behaviors>
            </Entry>

            <Image
                x:Name="imgCamera"
                Grid.Row="2"
                HeightRequest="30"
                Margin="0,0,10,0"
                Grid.Column="1"
                HorizontalOptions="End">
                <Image.Source>
                    <OnPlatform x:TypeArguments="FileImageSource">
                        <OnPlatform.iOS>
                            <FileImageSource File="camera.png"/>
                        </OnPlatform.iOS>
                        <OnPlatform.Android>
                            <FileImageSource File="camera.png"/>
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="Assets/camera.png"/>
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.BarcodeScanCommand, 
                                                        Source={x:Reference Name=imgCamera}}"
                                                         CommandParameter="{Binding}"/>
                </Image.GestureRecognizers>
            </Image>

            <Label
                Grid.Row="3"
                Grid.Column="0"
                VerticalOptions="Center"
                TextColor="{StaticResource lightGrayColor}"
                LineBreakMode="TailTruncation"
                Text="{Binding TagsStr}"/>

            <Image
                x:Name="imgTags"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,0,10,0"
                HeightRequest="40"
                HorizontalOptions="Center">
                <Image.Source>
                    <OnPlatform x:TypeArguments="FileImageSource">
                        <OnPlatform.iOS>
                            <FileImageSource File="tags.png"/>
                        </OnPlatform.iOS>
                        <OnPlatform.Android>
                            <FileImageSource File="tags.png"/>
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="Assets/tags.png"/>
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.AddTagsCommand, 
                                                        Source={x:Reference Name=imgTags}}"
                                                         CommandParameter="{Binding}"/>
                </Image.GestureRecognizers>
            </Image>

            <Button
                Grid.ColumnSpan="2"
                Text="Print"
                Grid.Row="4"
                HeightRequest="60"
                IsVisible="{Binding IsPalletze}"
                BackgroundColor="{StaticResource selectTextColor}"
                VerticalOptions="Center"
                TextColor="White"
                HorizontalOptions="FillAndExpand"
                Command="{Binding PrintCommand}"/>

            <BoxView
                Grid.ColumnSpan="2"
                Margin="-10,0,-10,0"
                Grid.Row="5"
                HeightRequest="50"
                BackgroundColor="{StaticResource bannerBGColor}"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"/>

            <Label
                Grid.Row="5"
                Grid.Column="0"
                TextColor="White"
                VerticalOptions="Center"
                Margin="10,0,0,0"
                FontSize="Large"
                Text="Scanned:"/>
            
            <Label
                Grid.Row="5"
                Grid.Column="1"
                TextColor="#B7EB35"
                Margin="0,0,10,0"
                FontSize="Large"
                FontAttributes="Bold"
                VerticalOptions="Center"
                Text="{Binding BarcodeCollection.Count}"/>
            
            <ListView
                Grid.ColumnSpan="2"
                x:Name="lstFillScan"
                Grid.Row="6"
                VerticalOptions="FillAndExpand"
                SeparatorVisibility="Default"
                SeparatorColor="{StaticResource lightGrayPlaceholderColor}"
                HasUnevenRows="True"
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding BarcodeCollection}">

                <ListView.Behaviors>
                    <behaviors:EventToCommandBehavior
                        EventName="ItemTapped" 
                        Command="{Binding ItemTappedCommand}"
                        Converter="{StaticResource ItemTappedConverter}"/>
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid 
                                VerticalOptions="Center"
                                RowSpacing="0"
                                Margin="10,0,10,0"
                                ColumnSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80*"/>
                                    <ColumnDefinition Width="20*"/>
                                </Grid.ColumnDefinitions>

                                <Label 
                                    VerticalOptions="Center" 
                                    VerticalTextAlignment="Center" 
                                    Text="{Binding Id}"
                                    TextColor="Black"
                                    FontSize="Medium">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.LabelItemTappedCommand, 
                                                        Source={x:Reference Name=lstFillScan}}"
                                                         CommandParameter="{Binding}"/>
                                    </Label.GestureRecognizers>
                                </Label>

                                <Image 
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Margin="10,0,0,0"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Source="{Binding Icon,Mode=TwoWay}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.IconItemTappedCommand, 
                                                        Source={x:Reference Name=lstFillScan}}"
                                                         CommandParameter="{Binding}"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Label
                                    LineBreakMode="TailTruncation"
                                    TextColor="{StaticResource lightGrayColor}"
                                    Grid.Row="1"
                                    FontSize="{StaticResource DetailFont}"
                                    Text="{Binding Path=BindingContext.TagsStr,Source={x:Reference Name=lstFillScan}}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </ContentPage.Content>
</ContentPage>