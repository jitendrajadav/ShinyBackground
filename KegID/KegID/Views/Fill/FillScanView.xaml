<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.FillScanView"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             xmlns:controls="clr-namespace:Plugin.CrossPlatformTintedImage.Abstractions;assembly=Plugin.CrossPlatformTintedImage.Abstractions"
             BackgroundColor="{StaticResource pageBGColor}"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:local="clr-namespace:KegID.Views"
             ios:Page.UseSafeArea="true"
             >

    <ContentPage.Content>
        
        <Grid
            ColumnSpacing="0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Button
                x:Name="lblCancel"
                Text="{Binding Resources[dialog_print_negative]}"
                Style="{StaticResource TopButtonTitleStyle}"
                Command="{Binding CancelCommand}"
                />

            <Button
                x:Name="lblSubmit"
                Text="{Binding Resources[menu_action_submit]}"
                IsVisible="{Binding IsPalletze,Converter={StaticResource InvertedBooleanConverter}}"
                Style="{StaticResource TopButtonTitleStyle}"
                HorizontalOptions="End"
                Command="{Binding SubmitCommand}"
                />

            <Label
                Style="{StaticResource LabelTitleStyle}"
                HorizontalOptions="Center"
                Text="{Binding Resources[menu_action_scan]}"
                TextColor="Black"/>

            <Grid
                RowSpacing="10"
                Margin="10,0,10,0"
                Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <BoxView
                    Margin="-10,0,-10,0"
                    Grid.Row="0"
                    HeightRequest="50"
                    BackgroundColor="{StaticResource bannerBGColor}"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"/>
            
                <Label
                    Margin="10,0,40,0"
                    Style="{StaticResource LabelTitleWhiteTextColorStyle}"
                    Text="{Binding Title}"
                    IsVisible="{Binding IsPalletVisible}"
                    Font="16"
                    Grid.Row="0"/>
            
                <Entry
                    IsVisible="{Binding IsPalletVisible,Converter={StaticResource InvertedBooleanConverter}}"
                    VerticalOptions="Center"
                    Margin="0,0,40,0"
                    Text="{Binding ManifestId,Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="0"/>

                <Image
                    x:Name="imgPencil"
                    Grid.Row="0"
                    HorizontalOptions="End"    
                    WidthRequest="30"
                    HeightRequest="30"
                    VerticalOptions="Center"
                    IsVisible="{Binding IsPalletze}"
                    BackgroundColor="Transparent">
                    
                    <Image.Source>
                        <FileImageSource File="{OnPlatform Android=pencil.png,iOS=pencil.png, UWP=Assets/pencil.png }"/>
                    </Image.Source>
                    
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.IsPalletVisibleCommand, 
                                                            Source={x:Reference Name=imgPencil}}"
                                                             CommandParameter="{Binding}"/>
                    </Image.GestureRecognizers>
                </Image>

                <Entry
                    Margin="0,0,40,0"
                    Grid.Row="1"
                    Text="{Binding ManaulBarcode}"
                    Placeholder="Barcode">
                    <Entry.Behaviors>
                        <behaviors:EventToCommandBehavior
                            EventName="Completed"
                          Command="{Binding BarcodeManualCommand}"/>
                    </Entry.Behaviors>
                </Entry>

                <controls:TintedImage
                    TintColor="{StaticResource selectTextColor}"
                    x:Name="imgCamera"
                    Grid.Row="1"
                    HeightRequest="30"
                    WidthRequest="30"
                    HorizontalOptions="End">
                    
                    <controls:TintedImage.Source>
                        <FileImageSource File="{OnPlatform Android=camera.png,iOS=camera.png, UWP=Assets/camera.png }"/>
                    </controls:TintedImage.Source>
                    
                    <controls:TintedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.BarcodeScanCommand, 
                                                            Source={x:Reference Name=imgCamera}}"
                                                             CommandParameter="{Binding}"/>
                    </controls:TintedImage.GestureRecognizers>
                </controls:TintedImage>

                <Label
                    Margin="0,0,40,0"
                    Grid.Row="2"
                    VerticalOptions="Center"
                    TextColor="{StaticResource lightGrayColor}"
                    LineBreakMode="TailTruncation"
                    Text="{Binding TagsStr}"/>

                <controls:TintedImage
                    TintColor="{StaticResource selectTextColor}"
                    x:Name="imgTags"
                    Grid.Row="2"
                    HeightRequest="30"
                    WidthRequest="30"
                    HorizontalOptions="End">
                    
                    <controls:TintedImage.Source>
                        <FileImageSource File="{OnPlatform Android=tags.png,iOS=tags.png, UWP=Assets/tags.png }"/>
                    </controls:TintedImage.Source>
                    
                    <controls:TintedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.AddTagsCommand, 
                                                            Source={x:Reference Name=imgTags}}"
                                                             CommandParameter="{Binding}"/>
                    </controls:TintedImage.GestureRecognizers>
                </controls:TintedImage>

                <Button
                    Text="{Binding Resources[menu_action_print]}"
                    Grid.Row="3"
                    IsVisible="{Binding IsPalletze}"
                    Style="{StaticResource BottomButtonTitleStyle}"
                    HeightRequest="50"
                    Command="{Binding PrintCommand}"/>

                <BoxView
                    Margin="-10,0,-10,0"
                    Grid.Row="4"
                    HeightRequest="50"
                    BackgroundColor="{StaticResource bannerBGColor}"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"/>

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Style="{StaticResource LabelTitleWhiteTextColorStyle}"
                    Text="{Binding Resources[label_scanned]}"/>
            
                <Label
                    Grid.Row="4"
                    HorizontalOptions="End"
                    TextColor="#B7EB35"
                    Style="{StaticResource LabelTitleWhiteTextColorStyle}"
                    Text="{Binding BarcodeCollection.Count}"/>
              
