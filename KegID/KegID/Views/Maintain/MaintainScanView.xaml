<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.MaintainScanView"
             xmlns:local="clr-namespace:KegID"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=MaintainScan}">
   
    <ContentPage.Content>
        
        <Grid
            RowSpacing="0"
            ColumnSpacing="0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <Label
                x:Name="lblBack"
                Style="{StaticResource LabelTitleStyle}"
                HorizontalOptions="Start"
                TextColor="{StaticResource selectTextColor}"
                Text="Back"
                Margin="10">
                
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.BackCommand, 
                                                        Source={x:Reference Name=lblBack}}"
                                                         CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label 
                HorizontalOptions="Center"
                Text="Scan"
                TextColor="Black"
                FontSize="{StaticResource AppBarButtonFontSize}"
                Grid.ColumnSpan="3"
                VerticalOptions="Center"/>

            <BoxView
                Margin="-10,0,-10,0"
                Grid.Row="1"
                Grid.ColumnSpan="3"
                BackgroundColor="{StaticResource lightGrayColor}"
                HeightRequest="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"/>

            <Entry
                Margin="10,0,0,0"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Text="{Binding ManaulBarcode,Mode=TwoWay}"
                Placeholder="Barcode">
                
                <Entry.Behaviors>
                    <behaviors:EventToCommandBehavior
                        EventName="Completed"
                      Command="{Binding BarcodeManualCommand}"/>
                </Entry.Behaviors>
            
            </Entry>

            <Image
                x:Name="imgCamera"
                Grid.Row="2"
                HeightRequest="30"
                Margin="0,0,10,0"
                Grid.Column="2"
                HorizontalOptions="End">
                
                <Image.Source>
                    <OnPlatform x:TypeArguments="FileImageSource">
                        <OnPlatform.iOS>
                            <FileImageSource File="camera.png"/>
                        </OnPlatform.iOS>
                        <OnPlatform.Android>
                            <FileImageSource File="camera.png"/>
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="Assets/camera.png"/>
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
                
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.BarcodeScanCommand, 
                                                        Source={x:Reference Name=imgCamera}}"
                                                         CommandParameter="{Binding}"/>
                </Image.GestureRecognizers>
            </Image>
            
            <BoxView
                Margin="-10,0,-10,0"
                Grid.Row="5"
                Grid.ColumnSpan="3"
                BackgroundColor="{StaticResource bannerBGColor}"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"/>

            <Label
                HorizontalOptions="Start"
                TextColor="White"
                Grid.Column="0"
                Grid.Row="5"
                Margin="15,0,0,0"
                FontSize="{StaticResource AppBarButtonFontSize}"
                VerticalOptions="Center"
                Grid.ColumnSpan="2"
                Text="Scanned:"/>

            <Label
                Grid.Column="2"
                Grid.Row="5"
                TextColor="#B7EB35"
                FontSize="{StaticResource AppBarButtonFontSize}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="{Binding BarcodeCollection.Count}"/>
          
            <Button
                HeightRequest="60"
                Margin="-10,-5,-10,0"
                BackgroundColor="{StaticResource selectTextColor}"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="6"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="FillAndExpand"
                TextColor="White"
                Text="Submit"
                Command="{Binding SubmitCommand}"/>

            <ListView
                Margin="10,0,10,0"
                x:Name="lstBarcode"
                Grid.Row="7"
                Grid.ColumnSpan="3"
                SeparatorVisibility="Default"
                SeparatorColor="{StaticResource lightGrayPlaceholderColor}"
                HasUnevenRows="True"
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding BarcodeCollection}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            
                            <Grid 
                                RowSpacing="0"
                                ColumnSpacing="0">
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80*"/>
                                    <ColumnDefinition Width="20*"/>
                                </Grid.ColumnDefinitions>

                                <Label 
                                    VerticalOptions="FillAndExpand" 
                                    VerticalTextAlignment="Center" 
                                    Text="{Binding Id}" 
                                    TextColor="Black"
                                    FontSize="{StaticResource ListViewTitleFont}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.LabelItemTappedCommand, 
                                                        Source={x:Reference Name=lstBarcode}}"
                                                         CommandParameter="{Binding}"/>
                                    </Label.GestureRecognizers>
                                </Label>

                                <Image 
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Margin="10,0,0,0"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Source="{Binding Icon,Mode=TwoWay}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.IconItemTappedCommand, 
                                                        Source={x:Reference Name=lstBarcode}}"
                                                         CommandParameter="{Binding}"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Label
                                    LineBreakMode="TailTruncation"
                                    TextColor="{StaticResource lightGrayColor}"
                                    Grid.Row="1"
                                    FontSize="{StaticResource ListViewDetailFont}"
                                    Text="{Binding Path=BindingContext.TagsStr,Source={x:Reference Name=lstBarcode}}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </ContentPage.Content>
</ContentPage>