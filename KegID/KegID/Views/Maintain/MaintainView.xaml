<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.MaintainView"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             xmlns:local="clr-namespace:KegID"
             Title="Maintenance Items"
             BackgroundColor="{StaticResource pageBGColor}"
             xmlns:control="clr-namespace:KegID.Controls"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=Maintain}">
    
    <ContentPage.Content>
       
        <Grid>
            <Grid.RowSpacing>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS" Value="5" />
                    <On Platform="Android, WinPhone, Windows" Value="0" />
                </OnPlatform>
            </Grid.RowSpacing>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button
                x:Name="lblHome"
                Style="{StaticResource TopButtonTitleStyle}"
                Text="{Binding Resources[button_home]}"
                Command="{Binding HomeCommand}"
                />

            <BoxView
                Grid.Row="1"
                BackgroundColor="{StaticResource lightGrayColor}"
                HeightRequest="1"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"/>
           
            <Label
                VerticalOptions="Center"
                Grid.Row="2"
                TextColor="Black"
                Style="{StaticResource LabelTitleStyle}"
                Text="{Binding Resources[label_maintenance_items]}"/>

            <Grid
                Grid.Row="3"
                ColumnSpacing="0"
                Margin="10,10,10,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>


                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="0"
                    IsToggled="{Binding BentChime}"
                    Grid.Column="0"/>

                <Label
                    VerticalOptions="Center"
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_bent_chime]}"/>

                <BoxView
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"/>

                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="2"
                    BackgroundColor="White"
                    IsToggled="{Binding BentNeck}"
                    Grid.Column="0"/>

                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_bent_neck]}"/>

                <BoxView
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>

                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="4"
                    IsToggled="{Binding DamagedSpear}"
                    Grid.Column="0"/>

                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_damaged_spear]}"/>

                <BoxView
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>

                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="6"
                    IsToggled="{Binding DeepCleaning}"
                    Grid.Column="0"/>

                <Label
                    Grid.Row="6"
                    Style="{StaticResource LabelNormalStyle}"
                    Grid.Column="1"
                    Text="{Binding Resources[label_deep_cleaning]}"/>

                <BoxView
                    Grid.Row="7"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>

                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="8"
                    IsToggled="{Binding FaultySeal}"
                    Grid.Column="0"/>

                <Label
                    Grid.Row="8"
                    Grid.Column="1"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_faulty_seal]}"/>

                <BoxView
                    Grid.Row="9"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>

                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="10"
                    IsToggled="{Binding FaultyValve}"
                    Grid.Column="0"/>

                <Label
                    Grid.Row="10"
                    Grid.Column="1"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_faulty_valve]}"/>

                <BoxView
                    Grid.Row="11"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>

                <Switch 
                    HeightRequest="30"
                    VerticalOptions="Center"
                    Grid.Row="12"
                    IsToggled="{Binding ValveInspection}"
                    Grid.Column="0"/>

                <Label
                    Grid.Row="12"
                    Grid.Column="1"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_valve_inspection]}"/>

                <BoxView
                    Grid.Row="13"
                    Grid.ColumnSpan="2"
                    BackgroundColor="{StaticResource lightGrayColor}"
                    HeightRequest="1"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>

                <Label
                    Grid.Column="0"
                    Grid.Row="14"
                    Style="{StaticResource LabelNormalStyle}"
                    Text="{Binding Resources[label_notes]}"/>

                <Entry
                    Margin="0,-10,0,-10"
                    Grid.ColumnSpan="2"
                    Grid.Column="0"
                    Text="{Binding Notes}"
                    Grid.Row="15"
                    Placeholder="{Binding Resources[hint_enter_notes_here]}"/>

                <Label
                    Text="{Binding Resources[label_destination}}"
                    Style="{StaticResource LabelNormalStyle}"
                    Grid.ColumnSpan="2"
                    Grid.Row="16"/>

                <Button
                    Grid.Column="0"
                    Grid.Row="17"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource TopButtonTitleStyle}"
                    Command="{Binding PartnerCommand}"
                    Text="{Binding Path=PartnerModel.FullName}"/>

            </Grid>
            
            <Button
                Margin="{StaticResource BottomAppBarButtonMargin}"
                Style="{StaticResource BottomButtonTitleStyle}"
                Grid.Row="4"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand"
                Text="{Binding Resources[button_next]}"
                Command="{Binding NextCommand}"
                />

        </Grid>
    </ContentPage.Content>
</ContentPage>