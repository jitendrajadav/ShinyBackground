<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.PalletizeView"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             xmlns:local="clr-namespace:KegID"
             Title="Build Pallet"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=Palletize}">
    
    <ContentPage.Content>
        <Grid
            ColumnSpacing="0"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="Start"
                Text="Cancel"
                VerticalOptions="Center"
                Command="{Binding CancelCommand}"/>

            <Label
                TextColor="Black"
                FontSize="Large"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Build Pallet"/>
            
            <Button
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="End"
                Text="Submit"
                VerticalOptions="Center"
                Command="{Binding SubmitCommand}"
                IsVisible="{Binding IsSubmitVisible}"/>

            <Grid
                RowSpacing="0"
                ColumnSpacing="0"
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <BoxView
                    Grid.Row="0"
                    BackgroundColor="{StaticResource bannerBGColor}"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"/>

                <Label 
                    Margin="10,0,10,0"
                    IsVisible="{Binding IsCameraVisible,Converter={StaticResource InvertedBooleanConverter}}"
                    HeightRequest="40"
                    Text="{Binding ManifestId, StringFormat='Pallet# -{0}'}"
                    BackgroundColor="{StaticResource bannerBGColor}"
                    TextColor="White"
                    FontSize="Medium"
                    VerticalTextAlignment="Center"
                    VerticalOptions="CenterAndExpand"/>

                <Entry 
                    Margin="10,0,10,0"
                    IsVisible="{Binding IsCameraVisible}"
                    HeightRequest="40"
                    Text="{Binding ManifestId,Mode=TwoWay}"
                    VerticalOptions="Center"/>

                <Button
                    IsVisible="{Binding IsCameraVisible,Converter={StaticResource InvertedBooleanConverter}}"
                    HorizontalOptions="End"                  
                    BorderRadius="5"
                    WidthRequest="50"
                    BorderWidth="0"
                    VerticalOptions="FillAndExpand"
                    Command="{Binding IsPalletVisibleCommand}"
                    BackgroundColor="Transparent">
                        <Button.Image>
                            <OnPlatform x:TypeArguments="FileImageSource">
                                <OnPlatform.iOS>
                                    <FileImageSource File="collectionslabels.png"/>
                                </OnPlatform.iOS>
                                <OnPlatform.Android>
                                    <FileImageSource File="collectionslabels.png"/>
                                </OnPlatform.Android>
                                <OnPlatform.WinPhone>
                                    <FileImageSource File="Assets/collectionslabels.png"/>
                                </OnPlatform.WinPhone>
                            </OnPlatform>
                        </Button.Image>
                </Button>

                <Button
                    IsVisible="{Binding IsCameraVisible}"
                    HorizontalOptions="End"                  
                    BorderRadius="5"
                    WidthRequest="50"
                    BorderWidth="0"
                    VerticalOptions="FillAndExpand"
                    Command="{Binding BarcodeScanCommand}"
                    BackgroundColor="Transparent">
                        <Button.Image>
                            <OnPlatform x:TypeArguments="FileImageSource">
                                <OnPlatform.iOS>
                                    <FileImageSource File="camera.png"/>
                                </OnPlatform.iOS>
                                <OnPlatform.Android>
                                    <FileImageSource File="camera.png"/>
                                </OnPlatform.Android>
                                <OnPlatform.WinPhone>
                                    <FileImageSource File="Assets/camera.png"/>
                                </OnPlatform.WinPhone>
                            </OnPlatform>
                        </Button.Image>
                </Button>

                <Label
                    TextColor="Black"
                    FontSize="Medium"
                    Margin="10,0,0,0"
                    Text="Stock ocation:"
                    Grid.Row="1"/>

                <Button
                    TextColor="{StaticResource selectTextColor}"
                    Margin="10,0,0,0"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    Command="{Binding PartnerCommand}"
                    Text="{Binding Path=StockLocation.FullName}"
                    Grid.Row="2"/>

                <BoxView
                    Grid.Row="3"
                    BackgroundColor="Black"
                    HeightRequest="1"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"/>

                <Label
                    TextColor="Black"
                    FontSize="Medium"
                    Margin="10,0,0,0"
                    Text="Target location:"
                    Grid.Row="4"/>

                <Button
                    TextColor="{StaticResource selectTextColor}"
                    Margin="10,0,0,0"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Start"
                    Text="{Binding Path=TargetLocation.FullName}"
                    Command="{Binding TargetLocationPartnerCommand}"
                    Grid.Row="5"/>

                <BoxView
                    Grid.Row="6"
                    BackgroundColor="Black"
                    HeightRequest="1"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"/>

                <Label
                    TextColor="Black"
                    FontSize="Medium"
                    Margin="10,0,0,0"
                    Text="More Info:"
                    Grid.Row="7"/>

                <Button
                    BackgroundColor="Transparent"
                    Margin="10,0,0,0"
                    Text="{Binding AddInfoTitle}"
                    HorizontalOptions="Start"
                    Command="{Binding AddTagsCommand}"
                    TextColor="{StaticResource selectTextColor}"
                    Grid.Row="8"/>

                <BoxView
                    Grid.Row="9"
                    BackgroundColor="Black"
                    HeightRequest="1"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"/>

                <Label
                    TextColor="Black"
                    FontSize="Medium"
                    Margin="10,0,0,0"
                    Text="Kegs:"
                    Grid.Row="10"/>

                <Button
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource selectTextColor}"
                    Grid.Row="11"
                    FontSize="40"
                    HorizontalOptions="Start"
                    Command="{Binding AddKegsCommand}"
                    Text="{Binding AddKegs}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>