<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.MenuView">
  <ContentView.Content>
      
        <AbsoluteLayout
            BackgroundColor="#424D5F"
            AbsoluteLayout.LayoutFlags="All"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            
            <Image 
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="1, 1, 3, 1"
                Aspect="AspectFill">
                <Image.Source>
                    <FileImageSource File="{OnPlatform Android=kegbg.png,iOS=kegbg.png, UWP=Assets/kegbg.png }"/>
                </Image.Source>
            </Image>

            <Grid
                AbsoluteLayout.LayoutFlags="All"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid
                    x:Name="grdMove"
                    Margin="10,10,10,10"
                    Grid.Row="0">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.MoveCommand, 
                                                        Source={x:Reference Name=grdMove}}"
                                                         CommandParameter="{Binding}"/>
                    </Grid.GestureRecognizers>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <BoxView
                        Grid.Row="0"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="Start"/>

                    <BoxView
                        Grid.Row="2"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="End"/>

                    <Image 
                        Grid.Column="1"
                        Grid.Row="1"
                        HeightRequest="50"
                        WidthRequest="40">
                        <Image.Source>
                            <FileImageSource File="{OnPlatform Android=newkeg.png,iOS=newkeg.png, UWP=Assets/newkeg.png }"/>
                        </Image.Source>
                    </Image>

                    <Label 
                        Margin="10,0,0,0"
                        Grid.Column="2"
                        Grid.Row="1"
                        Text="{Binding Resources[button_move_kegs]}"
                        TextColor="White"
                        FontSize="40"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="Start" />

                </Grid>

                <Grid
                    x:Name="grdFill"
                    Margin="10,0,10,10"
                    Grid.Row="1">

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.FillCommand, 
                                                        Source={x:Reference Name=grdFill}}"
                                                         CommandParameter="{Binding}"/>
                    </Grid.GestureRecognizers>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <BoxView
                        Grid.Row="0"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="Start"/>

                    <BoxView
                        Grid.Row="2"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="End"/>

                    <Image 
                        Grid.Row="1"
                        Grid.Column="1"
                        HeightRequest="50"
                        WidthRequest="40">
                        <Image.Source>
                            <FileImageSource File="{OnPlatform Android=fillkegs.png,iOS=fillkegs.png, UWP=Assets/fillkegs.png }"/>
                        </Image.Source>
                    </Image>

                    <Label 
                        Margin="10,0,0,0"
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="{Binding Resources[button_fill_kegs]}"
                        TextColor="White"
                        FontSize="40"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="Start" />
                </Grid>

                <Grid
                    x:Name="grdPalletize"
                    Margin="10,0,10,10"
                    Grid.Row="2">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.PalletizeCommand, 
                                                        Source={x:Reference Name=grdPalletize}}"
                                                         CommandParameter="{Binding}"/>
                    </Grid.GestureRecognizers>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <BoxView
                        Grid.Row="0"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="Start"/>

                    <BoxView
                        Grid.Row="2"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="End"/>

                    <Image 
                        Grid.Row="1"
                        Grid.Column="1"
                        HeightRequest="50"
                        WidthRequest="40">
                        <Image.Source>
                            <FileImageSource File="{OnPlatform Android=pallet.png,iOS=pallet.png, UWP=Assets/pallet.png }"/>
                        </Image.Source>
                    </Image>

                    <Label 
                        Margin="10,0,0,0"
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="{Binding Resources[button_build_pallet]}"
                        TextColor="White"
                        FontSize="40"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="Start" />
                </Grid>

                <Grid
                    x:Name="grdMaintain"
                    Margin="10,0,10,10"
                    Grid.Row="3">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Path=BindingContext.MaintainCommand, 
                                                        Source={x:Reference Name=grdMaintain}}"
                                                         CommandParameter="{Binding}"/>
                    </Grid.GestureRecognizers>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <BoxView
                        Grid.Row="0"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="Start"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="Start"/>

                    <BoxView
                        Grid.Row="2"
                        Grid.ColumnSpan="4"
                        BackgroundColor="White"
                        HeightRequest="1"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"/>

                    <BoxView
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.RowSpan="3"
                        BackgroundColor="White"
                        WidthRequest="1"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="End"/>

                    <Image 
                        Grid.Row="1"
                        Grid.Column="1"
                        HeightRequest="50"
                        WidthRequest="40">
                        <Image.Source>
                            <FileImageSource File="{OnPlatform Android=repair.png,iOS=repair.png, UWP=Assets/repair.png }"/>
                        </Image.Source>
                    </Image>

                    <Label 
                        Margin="10,0,0,0"
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="{Binding Resources[button_maintain_kegs]}"
                        TextColor="White"
                        FontSize="40"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="Start" />
                </Grid>

            </Grid>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>