<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KegID"
             xmlns:controls="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             x:Class="KegID.Views.WhatIsNewView"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=WhatIsNew}">

    <ContentPage.Content>
        
        <Grid
            ColumnSpacing="0"
            RowSpacing="0"
            Margin="0,0,0,0">
           
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <controls:CarouselViewControl 
                Grid.Row="0"
                x:Name="whatsNew"
                ItemsSource="{Binding WhatsNewItemsSource}"
                ShowArrows="true"
                ShowIndicators="true"
                PositionSelected="Handle_PositionSelected"/>
            
            <Button
                Margin="-15,-15,-15,-5"
                x:Name="btnNavigation"
                Style="{StaticResource BottomButtonTitleStyle}"
                Grid.Row="1"
                Text="Next >"
                Clicked="NavigationCommand"/>
            
        </Grid>
        
    </ContentPage.Content>
    
</ContentPage>