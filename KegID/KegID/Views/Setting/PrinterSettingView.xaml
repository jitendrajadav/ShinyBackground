<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.PrinterSettingView"
             xmlns:local="clr-namespace:KegID"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=PrinterSetting}">
   
    <ContentPage.Content>
        
        <Grid
            ColumnSpacing="0"
            RowSpacing="0"
            Margin="10,0,10,0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label
                x:Name="lblCancel"
                Style="{StaticResource LabelTitleStyle}"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="Start"
                Text="Cancel">
               
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.CancelCommand, 
                                                        Source={x:Reference Name=lblCancel}}"
                                                         CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label
                x:Name="lblSave"
                Grid.Column="1"
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="End"
                Text="Save"
                VerticalOptions="Center"
                FontSize="{StaticResource AppBarButtonFontSize}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SaveCommand, 
                                                        Source={x:Reference Name=lblSave}}"
                                                         CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>

            <BoxView
                Margin="-10,0,-10,0"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                BackgroundColor="Black"
                HeightRequest="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"/>

            <Label 
                Grid.Row="2"
                TextColor="Black"
                FontSize="Medium"
                Text="Print every menifest"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Switch
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="2"/>

            <Label 
                Grid.Row="3"
                TextColor="Black"
                FontSize="Medium"
                Text="Print every pallate"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Switch
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="3"/>

            <Label 
                Grid.Row="4"
                TextColor="Black"
                FontSize="Medium"
                Text="Pallet label copies"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Entry
                HorizontalOptions="FillAndExpand"
                Grid.Column="1"
                Grid.Row="4"/>

            <BoxView
                Margin="-10,0,-10,0"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                BackgroundColor="Black"
                HeightRequest="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"/>
            
            <Label 
                Grid.Row="6"
                Text="Zebra Printer:"
                TextColor="Black"
                FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Label 
                Grid.Row="7"
                Text="Bluetooth"
                TextColor="Black"
                FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Switch
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="7"/>

            <Label 
                Grid.Row="8"
                Text="IP/ host"
                TextColor="Black"
                FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Entry
                HorizontalOptions="FillAndExpand"
                Grid.Column="1"
                Grid.Row="8"/>

            <Label 
                Grid.Row="9"
                Text="Port"
                TextColor="Black"
                FontSize="Medium"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Entry
                HorizontalOptions="FillAndExpand"
                Grid.Column="1"
                Grid.Row="9"/>

            <Label
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.ColumnSpan="2"
                Grid.Row="10"
                Text="Test printer">
                
            </Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>