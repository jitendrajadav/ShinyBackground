<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.PrinterSettingView"
             xmlns:local="clr-namespace:KegID"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=PrinterSetting}">
    <ContentPage.Content>
        
        <Grid
            Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Button
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="Start"
                Text="Cancel"
                Command="{Binding CancelCommand}"/>

            <Button
                Grid.Column="1"
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                HorizontalOptions="End"
                Text="Save"
                Command="{Binding SaveCommand}"/>

            <BoxView
                Margin="-10,0,-10,0"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                BackgroundColor="Black"
                HeightRequest="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"/>

            <Label 
                Grid.Row="2"
                Text="Print every menifest"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Switch
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="2"/>

            <Label 
                Grid.Row="3"
                Text="Print every pallate"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Switch
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="3"/>

            <Label 
                Grid.Row="4"
                Text="Pallet label copies"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Entry
                HorizontalOptions="FillAndExpand"
                Grid.Column="1"
                Grid.Row="4"/>

            <BoxView
                Margin="-10,0,-10,0"
                Grid.ColumnSpan="2"
                Grid.Row="5"
                BackgroundColor="Black"
                HeightRequest="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"/>

            
            <Label 
                Grid.Row="6"
                Text="Zebra Printer:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Label 
                Grid.Row="7"
                Text="Bluetooth"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Switch
                HorizontalOptions="Center"
                Grid.Column="1"
                Grid.Row="7"/>

            <Label 
                Grid.Row="8"
                Text="IP/ host"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Entry
                HorizontalOptions="FillAndExpand"
                Grid.Column="1"
                Grid.Row="8"/>

            <Label 
                Grid.Row="9"
                Text="Port"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" />

            <Entry
                HorizontalOptions="FillAndExpand"
                Grid.Column="1"
                Grid.Row="9"/>

            <Button
                BackgroundColor="Transparent"
                TextColor="{StaticResource selectTextColor}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.ColumnSpan="2"
                Grid.Row="10"
                Text="Test printer"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>