<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.LoginView"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             xmlns:local="clr-namespace:KegID"
             BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=Login}">

    <ContentPage.Content>
        
        <Grid 
            Margin="20">
           
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Image
                Margin="40"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="Transparent">
               
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <OnPlatform.iOS>
                            <FileImageSource File="kegidlogo.png"/>
                        </OnPlatform.iOS>
                        <OnPlatform.Android>
                            <FileImageSource File="kegidlogo.png"/>
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="Assets/kegidlogo.png"/>
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
            </Image>

            <Entry
                Grid.Row="1"
                Placeholder="Username"
                Text="{Binding Username}"/>

            <Entry
                IsPassword="True"
                Grid.Row="2"
                Placeholder="Password"
                Text="{Binding Password}"/>

            <Label
                Margin="0,20,0,0"
                x:Name="lblLogin"
                BackgroundColor="{StaticResource selectTextColor}"
                Grid.Row="3"
                Text="{Binding Resources[app_name]}"
                TextColor="White"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                HeightRequest="{StaticResource AppBarButtonHeight}"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource AppBarButtonFontSize}">
               
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Path=BindingContext.LoginCommand, 
                                                        Source={x:Reference Name=lblLogin}}"
                                                         CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>

        </Grid>
        
    </ContentPage.Content>
    
</ContentPage>