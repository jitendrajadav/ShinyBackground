<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.LoginView"
             xmlns:behaviors="clr-namespace:KegID.Behaviors"
             xmlns:local="clr-namespace:KegID"
              BackgroundColor="#FFFFFF"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=Login}">
    <!--BackgroundImage="{Binding BgImage}"-->

    <ContentPage.Content>
        <Grid 
            Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!--<RowDefinition Height="Auto"/>-->
            </Grid.RowDefinitions>
            
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>-->
            
            <!--<Label
                VerticalOptions="Center"
                HorizontalTextAlignment="End"
                TextColor="White"
                Text="Username"/>-->

            <!--Grid.Column="1"-->
            <Image
                Margin="40"
                HorizontalOptions="Center"
                VerticalOptions="Center"
               BackgroundColor="Transparent">
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <OnPlatform.iOS>
                            <FileImageSource File="kegidlogo.png"/>
                        </OnPlatform.iOS>
                        <OnPlatform.Android>
                            <FileImageSource File="kegidlogo.png"/>
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="Assets/kegidlogo.png"/>
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
            </Image>

            <Entry
                Grid.Row="1"
                Placeholder="Username"
                Text="{Binding Username}"/>
            
            <!--<Label
                VerticalOptions="Center"
                HorizontalTextAlignment="End"
                Grid.Row="1"
                TextColor="White"
                Text="Password"/>-->
          
            <!--Grid.Column="1"-->

            <Entry
                IsPassword="True"
                Grid.Row="2"
                Placeholder="Password"
                Text="{Binding Password}"/>

            <!--Grid.Column="1"-->
            <Button
                BackgroundColor="{StaticResource selectTextColor}"
                Grid.Row="3"
                Text="Log in"
                TextColor="White"
                HeightRequest="{StaticResource ButtonHeight}"
                Command="{Binding LoginCommand}"/>

