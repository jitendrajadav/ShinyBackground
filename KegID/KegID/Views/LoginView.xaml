                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    TextColor="White"
                    Text="https://www.kegid.com/">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding KegIDCommand}" />
                    </Label.GestureRecognizers>
                </Label>
                
                <BoxView
                    Grid.Row="1"
                    BackgroundColor="White"
                    HeightRequest="1"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"/>
                
                <Label
                    Grid.Row="2"
                     HorizontalOptions="Center"
                    TextColor="White"
                    Text="v4.0">
                </Label>
            </Grid>-->
        </Grid>
    </ContentPage.Content>
</ContentPage>