<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KegID.Views.LoginView"
             BackgroundColor="{StaticResource pageBGColor}"
             >

    <ContentPage.Content>
        
        <Grid 
            RowSpacing="{StaticResource GirdRowSpacing}"
            Margin="20">
           
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Image
                HorizontalOptions="Center"
                VerticalOptions="Start"
                BackgroundColor="Transparent">
                <Image.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS" Value="40" />
                        <On Platform="Android, WinPhone, Windows, UWP" Value="40,0,40,40" />
                    </OnPlatform>
                </Image.Margin>

                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <On Platform="iOS">
                            <FileImageSource File="kegidlogo.png"/>
                        </On>
                        <On Platform="Android">
                            <FileImageSource File="kegidlogo.png"/>
                        </On>
                        <On Platform="UWP">
                            <FileImageSource File="Assets/kegidlogo.png"/>
                        </On>
                    </OnPlatform>
                </Image.Source>
            </Image>

            <Entry
                Grid.Row="1"
                Placeholder="{Binding Resources[hint_username]}"
                HeightRequest="{StaticResource EntryHeight}"
                Text="{Binding Username}">
            </Entry>

            <Entry
                IsPassword="True"
                Grid.Row="2"
                Placeholder="{Binding Resources[hint_password]}"
                HeightRequest="{StaticResource EntryHeight}"
                Text="{Binding Password}"/>

            <Button
                Margin="0,20,0,0"
                x:Name="lblLogin"
                Style="{StaticResource BottomButtonTitleStyle}"
                Grid.Row="3"
                Text="{Binding Resources[button_login]}"
                Command="{Binding LoginCommand}"/>

        </Grid>
        
    </ContentPage.Content>
    
</ContentPage>