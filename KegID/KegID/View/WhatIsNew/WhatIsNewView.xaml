<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KegID"
             xmlns:controls="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             x:Class="KegID.View.WhatIsNewView"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=WhatIsNew}">

    <ContentPage.Content>
        <Grid
            Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <controls:CarouselViewControl 
                Grid.Row="0"
                x:Name="whatsNew"
                ItemsSource="{Binding WhatsNewItemsSource}"
                ShowArrows="true"
                ShowIndicators="true"
                PositionSelected="Handle_PositionSelected"/>
            
            <Button
                x:Name="btnNavigation"
                BackgroundColor="Blue"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Grid.Row="1"
                TextColor="White"
                Text="Next >"
                Clicked="NavigationCommand"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>